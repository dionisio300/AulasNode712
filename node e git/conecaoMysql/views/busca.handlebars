

    

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/consultarLivro" method="POST">
                    <div class="mb-3">
                        <label for="nomeLivro" class="form-label">Digite o nome do livro</label>
                        <input type="text" class="form-control" id="nomeLivro" name="nomeLivro"
                            placeholder="Ex: Dom Casmurro" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Buscar</button>
                </form>
            </div>
        </div>
    </div>

    {{#if encontrou}}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>Livro Encontrado</h2>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{dadosLivro.titulo}}</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Autor:</strong> {{dadosLivro.autor}}</li>
                            <li class="list-group-item"><strong>Ano de Publicação:</strong>
                                {{dadosLivro.ano_publicacao}}</li>
                            <li class="list-group-item"><strong>Gênero:</strong> {{dadosLivro.genero}}</li>
                            <li class="list-group-item"><strong>Disponível:</strong> {{#if
                                dadosLivro.disponivel}}Sim{{else}}Não{{/if}}</li>
                            
                        </ul>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-warning text-center" role="alert">
                    <strong>Livro não encontrado!</strong>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2025 Biblioteca Virtual - Todos os direitos reservados</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
