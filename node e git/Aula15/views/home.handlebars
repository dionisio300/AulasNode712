<h1>Lista de produtos</h1>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Preço</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each produtos}}
                    <tr>
                        <td>{{this.nome}}</td>
                        <td>{{this.descricao}}</td>
                        <td>{{this.preco}}</td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</div>